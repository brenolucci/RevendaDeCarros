{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/custom.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx"],
    "exclude": ["src/**/__tests__/*", "node_modules"],
    "compilerOptions": {
        "importHelpers": true,
        "isolatedModules": true,
        "noEmit": true,
        "target": "ESNext",
        "module": "ESNext",
      "composite": true,
      "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
  
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      }
    }
  }